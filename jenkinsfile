pipeline {
    agent any

    tools {
        maven 'Maven-3.9'
    }

    environment {
        TOMCAT_URL   = 'http://44.192.97.178:8080'
        TOMCAT_CREDS = 'JENKINS_ID'
        APP_NAME     = 'simple-java-app'
    }

    stages {

        stage('Checkout') {
            steps {
                echo '========== Checking out Code =========='
                git branch: 'main',
                    url: 'https://github.com/glare247/simple-java-docker.git'
            }
        }

        stage('Build') {
            steps {
                echo '========== Building WAR file =========='
                sh 'mvn clean package -DskipTests'
                archiveArtifacts artifacts: "target/${APP_NAME}.war", fingerprint: true
            }
        }

        stage('Test') {
            steps {
                echo '========== Running Tests =========='
                sh '''
                mvn test || echo "⚠️ Some tests failed (pipeline will continue)"
                '''
                junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                echo '========== Deploying to Tomcat Server =========='
                script {
                    // Remove existing exploded folder to avoid conflicts
                    sh "rm -rf /opt/tomcat/webapps/${APP_NAME}"

                    deploy adapters: [
                        tomcat9(
                            credentialsId: env.TOMCAT_CREDS,
                            url: env.TOMCAT_URL,
                            path: ''
                        )
                    ],
                    war: "target/${APP_NAME}.war",
                    contextPath: "/${APP_NAME}"
                }
            }
        }

        stage('Health Check') {
            steps {
                echo '========== Checking Application Health =========='
                script {
                    sh '''
                    # Follow redirects and get final HTTP status
                    STATUS=$(curl -s -L -o /dev/null -w "%{http_code}" ${TOMCAT_URL}/${APP_NAME}/)

                    echo "HTTP status: $STATUS"

                    if [ "$STATUS" = "200" ]; then
                      echo "✅ Application is running"
                    else
                      echo "❌ Application health check failed"
                      exit 1
                    fi
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '========================================='
            echo '✅ PIPELINE COMPLETED SUCCESSFULLY!'
            echo '========================================='
            echo "Application URL: ${TOMCAT_URL}/${APP_NAME}/"
        }
        failure {
            echo '========================================='
            echo '❌ PIPELINE FAILED!'
            echo '========================================='
        }
        always {
            cleanWs()
        }
    }
}
